# Environment Variables for Camp Management App
# Copy this file to .env.local and modify as needed

# App Configuration
NODE_ENV=development
VITE_APP_NAME="Camp Management App"
VITE_APP_VERSION=1.0.0

# API Configuration (when backend is added)
# VITE_API_URL=http://localhost:3000/api
# VITE_API_KEY=your_api_key_here

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# Scheduling Algorithm Configuration
NO_REPEATS_DAYS=3
UNITS="Seniors,Juniors,Tots"
ACTIVITY_AREAS="Active:swimming,archery;Creative:crafts"
CABIN_NAMING_STRATEGY="full_unit_name_and_number"
# To use the template strategy, uncomment the line below and set the CABIN_NAMING_STRATEGY to "template"
# Available placeholders: {unit_initial}, {cabin_id}, {unit_name}
# CABIN_NAMING_TEMPLATE="{unit_name}_{cabin_id}"
