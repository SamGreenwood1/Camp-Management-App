# Comma-separated list of camp units
UNITS=Seniors,Juniors,Toddlers

# 2D array of activity areas, with department as level 1 and activity areas as level 2
# Format: [["Department1", ["Area1", "Area2"]], ["Department2", ["Area3", "Area4"]]]
ACTIVITY_AREAS=[["Aquatics", ["Swimming Pool", "Canoeing"]], ["Sports", ["Archery", "Basketball"]], ["Arts", ["Crafts", "Drama"]]]

# Template for generating cabin names.
# Available variables:
# - {unit_initial}: The first letter of the unit name.
# - {unit_name}: The full unit name.
# - {cabin_id}: The cabin number.
#
# Examples:
# - "{unit_initial}{cabin_id}"
# - "{unit_name}-{cabin_id}"
# - "Cabin-{cabin_id}"
CABIN_NAMING_TEMPLATE="{unit_initial}{cabin_id}"

# Number of days to schedule
NUMBER_OF_DAYS=5

# Number of periods per day
NUMBER_OF_PERIODS=5

# Scoring weights
BASE_SCORE=100
AREA_VARIETY_PENALTY=-20
AREA_VARIETY_BONUS=15
SOCIAL_GROUPING_BONUS=25
FAVORITE_AREA_BONUS=30
AVOID_AREA_PENALTY=-50
UTILIZATION_BONUS=20
UTILIZATION_PENALTY=-30
