{
  "name": "camp-management-app",
  "version": "1.0.0",
  "description": "Camp Management App with advanced scheduling algorithm - Monorepo",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:public\" \"npm run dev:app\"",
    "dev:public": "cd public-site && npm run dev",
    "dev:app": "cd user-app && npm run dev",
    "build": "npm run build:public && npm run build:app",
    "build:public": "cd public-site && npm run build",
    "build:app": "cd user-app && npm run build",
    "preview": "concurrently \"npm run preview:public\" \"npm run preview:app\"",
    "preview:public": "cd public-site && npm run preview",
    "preview:app": "cd user-app && npm run preview",
    "install:all": "npm install && cd public-site && npm install && cd ../user-app && npm install",
    "clean": "rm -rf public-site/dist user-app/dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamGreenwood1/Camp-Management-App.git"
  },
  "keywords": ["camp", "scheduling", "management", "algorithm", "monorepo"],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SamGreenwood1/Camp-Management-App/issues"
  },
  "homepage": "https://github.com/SamGreenwood1/Camp-Management-App#readme",
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0",
    "vite": "^7.0.5"
  }
}
